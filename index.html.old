  <style>
    :root {
      --bg: #ffffff;
      --text: #111111;
      --primary: #0077ff;
      --card: #f4f4f4;
      --accent: #00b894;
    }
    [data-theme="dark"] {
      --bg: #111111;
      --text: #ffffff;
      --card: #1e1e1e;
    }
    * {
      box-sizing: border-box;
      scroll-behavior: smooth;
    }
    body {
      background-color: var(--bg);
      color: var(--text);
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      margin: 0;
      padding: 0;
      transition: background 0.5s ease, color 0.5s ease;
    }
    h1, h2 {
      animation: fadeInDown 1s ease-out;
    }
    @keyframes fadeInDown {
      from { opacity: 0; transform: translateY(-20px); }
      to { opacity: 1; transform: translateY(0); }
    }
    .social-links {
      text-align: center;
      margin-top: 30px;
      animation: fadeIn 2s ease-in;
    }
    .social-links a {
      margin: 0 15px;
      font-size: 2em;
      color: var(--text);
      transition: transform 0.3s ease, color 0.3s ease;
    }
    .social-links a:hover {
      color: var(--primary);
      transform: scale(1.2) rotate(5deg);
    }
    .intro {
      max-width: 700px;
      margin: 80px auto 30px auto;
      padding: 30px 20px;
      text-align: center;
      background-color: var(--card);
      border-radius: 12px;
      box-shadow: 0 8px 30px rgba(0,0,0,0.1);
      animation: slideUp 1s ease-out;
    }
    .intro img {
      width: 150px;
      height: 150px;
      border-radius: 50%;
      object-fit: cover;
      margin-bottom: 20px;
      box-shadow: 0 4px 15px rgba(0,0,0,0.1);
    }
    @keyframes slideUp {
      from { opacity: 0; transform: translateY(30px); }
      to { opacity: 1; transform: translateY(0); }
    }
    .education-section, .personal-info {
      max-width: 700px;
      margin: 50px auto;
      padding: 30px 20px;
      background-color: var(--card);
      border-radius: 12px;
      box-shadow: 0 6px 20px rgba(0, 0, 0, 0.1);
      animation: fadeInUp 1s ease-in-out;
    }
    @keyframes fadeInUp {
      from { opacity: 0; transform: translateY(50px); }
      to { opacity: 1; transform: translateY(0); }
    }
    .education-section ul, .personal-info ul {
      list-style: none;
      padding-left: 0;
    }
    .education-section li, .personal-info li {
      padding: 10px 0;
      font-size: 1.2em;
    }
    .dark-toggle {
      position: fixed;
      top: 20px;
      right: 20px;
      background: var(--card);
      border: 1px solid var(--primary);
      border-radius: 50%;
      padding: 12px;
      cursor: pointer;
      color: var(--text);
      font-size: 1.5em;
      transition: all 0.3s ease;
      display: flex;
      align-items: center;
      justify-content: center;
    }
    .dark-toggle:hover {
      background-color: var(--primary);
      color: white;
    }
    .dark-toggle i {
      font-size: 24px;
    }
    #sun-icon {
      display: block;
    }
    #moon-icon {
      display: none;
    }
    [data-theme="dark"] .dark-toggle #sun-icon {
      display: none;
    }
    [data-theme="dark"] .dark-toggle #moon-icon {
      display: block;
    }
    /* Freelance Section */
    .freelance-section {
      background-color: var(--card);
      padding: 40px 30px;
      border-radius: 12px;
      box-shadow: 0 8px 30px rgba(0, 0, 0, 0.1);
      transition: transform 0.3s ease, box-shadow 0.3s ease;
    }
    .freelance-section:hover {
      transform: translateY(-5px);
      box-shadow: 0 12px 40px rgba(0, 0, 0, 0.2);
    }
    /* Projects Section */
    .project-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
      gap: 30px;
    }
    .project-card {
      background-color: var(--card);
      padding: 20px;
      border-radius: 12px;
      box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
      transition: transform 0.3s ease, box-shadow 0.3s ease;
    }
    .project-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 12px 40px rgba(0, 0, 0, 0.2);
    }
    .project-card h3 {
      color: var(--primary);
    }
    /* Contact Section */
    .contact-section {
      max-width: 700px;
      margin: 50px auto;
      padding: 40px 30px;
      background-color: var(--card);
      border-radius: 12px;
      box-shadow: 0 6px 20px rgba(0, 0, 0, 0.1);
    }
    .contact-section form label {
      font-size: 1.1em;
      margin-bottom: 8px;
    }
    .contact-section form input, .contact-section form textarea {
      width: 100%;
      padding: 12px;
      margin: 10px 0;
      border-radius: 8px;
      border: 1px solid #ccc;
    }
    .contact-section form button {
      padding: 12px 24px;
      background: var(--primary);
      color: white;
      border: none;
      border-radius: 8px;
      cursor: pointer;
      transition: background 0.3s ease;
    }
    .contact-section form button:hover {
      background: var(--accent);
    }
  </style>
</head>
